
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/Content/img/favicon.png">
    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/bootstrap-reset.css" rel="stylesheet">
    <link href="/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="/Content/css/style.css" rel="stylesheet">
    <link href="/Content/css/style-responsive.css" rel="stylesheet" />
</head>

<body class="login-body">
    <div class="container">
        <form class="form-signin" action="login" method="post" >
            <h2 class="form-signin-heading">Giriş</h2>
            <div class="login-wrap" style="border:solid;border-width:0.5px;border-color:lightgray">
                @{
                    if (TempData["a"] != null)
                    {
                        <div class="col-lg-12">
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <strong>@TempData["a"]</strong>
                            </div>
                        </div>
                    }
                }
                <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="kullaniciAdi" autofocus required>
                <input type="password" class="form-control" placeholder="Şifre" name="sifre" required>
                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> Beni Hatırla
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Giriş Yap</button>      
            </div>
        </form>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/js/jquery.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>

</body>
</html>
